<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filedirectory
            path: "/Users/xingyang/Music"
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.load(filedirectory.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<MusicPlayer>:
    id: music_player
    name: "music_player"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
    GridLayout:
        cols: 1
        Image:
            id: album_art
            size_hint_y: 0.4
            source:
        Label:
            id: song_duration
            size_hint_y: 0.02
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            font_name: "Roboto-Regular"
            font_size: 14
            text_size: self.size
            color: (0,0,0,1)
            halign: "center"
            text: "example - duration"

        Label:
            id: title
            size_hint_y: 0.05
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            font_name: "fonts/Aileron-Regular.otf"
            font_size: 24
            text_size: self.size
            padding_x: 15
            halign: "left"
            valign: "middle"
            color: 192, 192, 192, 1
            text: "Hikari"
        Label:
            id: album
            size_hint_y: 0.02
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            font_name: "fonts/Aileron-Regular.otf"
            font_size: 14
            text_size: self.size
            padding_x: 35
            halign: "left"
            valign: "top"
            color: 192, 192, 192, 1
            text: "example - album"
        Label:
            id: artist
            size_hint_y: 0.04
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            font_name: "fonts/Aileron-Regular.otf"
            font_size: 14
            text_size: self.size
            padding_x: 35
            halign: "left"
            valign: "top"
            color: 192, 192, 192, 1
            text: "example - artist"
        GridLayout:
            cols: 2
            size_hint_y: 0.25
            Button:
                id: play_pause
                name: "play_pause"
                background_normal: "images/Play-normal.png"
                background_down: "images/Play-down.png"
                on_press: root.play_pause()
            Button:
                id: load
                name: "load"
                background_normal: "images/Load-normal.png"
                background_down: "images/Load-down.png"
                on_press: root.load_window()

<RootWidget>:

    MusicPlayer:
        id: music_player
        name: "music_player"
