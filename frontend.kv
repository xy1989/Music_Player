<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filedirectory
            path: "/Users/xingyang/Music"
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release: root.load(filedirectory.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<MusicPlayer>:
    id: music_player
    name: "music_player"
    GridLayout:
        cols: 1
        Image:
            size_hint_y: 0.7
        Label:
            size_hint_y: 0.05
            id: song_duration
            name: "song_duration"
            text:
        Label:
            size_hint_y: 0.05
            id: title
            text: ""
        Label:
            size_hint_y: 0.05
            id: album
            text: ""
        Label:
            size_hint_y: 0.05
            id: artist
            text: ""
        GridLayout:
            cols: 2
            Button:
                size_hint_y: 0.1
                id: play_pause
                name: "play_pause"
                text: root.pause_play_text
                on_press: root.play_pause()
            Button:
                size_hint_y: 0.1
                id: load
                name: "load"
                text: "Load Track"
                on_press: root.load_window()

<RootWidget>:
    MusicPlayer:
        id: music_player
        name: "music_player"
