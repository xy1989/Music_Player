<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filedirectory
            path: "/Users/xingyang/Music"
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load"
                on_release: root.load(filedirectory.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<MusicPlayer>:
    id: music_player
    name: "music_player"
    GridLayout:
        cols: 1
        padding: 15
        Image:
            id: album_art
            size_hint_y: 0.4
            source:
        Slider:
            id: song_duration
            size_hint_y: .025
            min: 0
            max:
            value:
        GridLayout:
            cols: 2
            Label:
                id: current_position
                size_hint_y: .025
                color: 192, 192, 192, 1
                text:
            Label:
                id: song_length
                size_hint_y: .025
                color: 192, 192, 192, 1
                text:

        ScrollView:
            id: title_scroll
            size_hint_y: 0.1
            effect_cls: "ScrollEffect"
            scroll_x: 0
            Label:
                id: title
                size_hint_x: None
                width: self.texture_size[0]
                font_name: "fonts/Aileron-Regular.otf"
                font_size: 36
                text_size: None, self.height
                color: 192, 192, 192, 1
                padding_x: 20
                text:
        Label:
            id: album
            size_hint_y: 0.025
            font_name: "fonts/Aileron-Regular.otf"
            font_size: 14
            text_size: self.size
            padding_x: 50
            halign: "left"
            valign: "top"
            color: 192, 192, 192, 1
            text:
        Label:
            id: artist
            size_hint_y: 0.025
            font_name: "fonts/Aileron-Regular.otf"
            font_size: 14
            text_size: self.size
            padding_x: 50
            halign: "left"
            valign: "top"
            color: 192, 192, 192, 1
            text:
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.3
            Button:
                id: play_pause
                name: "play_pause"
                disabled: True
                background_disabled_normal: ''
                size_hint_x: .5
                pos_hint: {'center_x':.5, 'center_y':.5}
                background_normal: "images/Play-normal.png"
                background_down: "images/Play-down.png"
                on_press: root.play_pause()
            Button:
                id: load
                name: "load"
                size_hint_x: .5
                background_normal: "images/Load-normal.png"
                background_down: "images/Load-down.png"
                on_press: root.load_window()

<RootWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MusicPlayer:
        id: music_player
        name: "music_player"
